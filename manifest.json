{
  "name": "Fish Tool",
  "description" : "my fish tool",
  "version": "1.3.5",
  "manifest_version": 3,
  "author": "chrischen0405",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "fish.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "http://www.zhihu.com/*",
      "https://www.zhihu.com/*"
    ],
    "js": ["js/js.js"],
    "css": ["css/css.css"],
    "run_at": "document_start"
  }],
  "host_permissions": [
    "http://www.zhihu.com/*",
    "https://www.zhihu.com/*",
    "http://zhuanlan.zhihu.com/*",
    "https://zhuanlan.zhihu.com/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "homepage_url": "https://github.com/chrischen0405/fishTool"
}
